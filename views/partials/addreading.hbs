<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="two fields">
    <div class="field">
        <label>Code</label>
        <input placeholder="000" type="number" step="100" min="100" max ="800" name="code" required>
    </div>
    <div class="field">
        <label>Temperature</label>
        <input placeholder="00.0C" type="number" step="0.1" min="-50" max="50" name="temperature" required>
    </div>
    <div class="field">
        <label>Wind Speed</label>
        <input placeholder="00.00kMh" type="number" step="0.1" min="0" max="200" name="windSpeed" required>
    </div>
    <div class="field">
        <label>Wind Direction</label>
         <input placeholder="000deg" type="number" min="0" max="360" name="windDirection" required>
    </div>
    <div class="field">
        <label>Pressure</label>
        <input placeholder="000hPa" type="number" min="900" max="1100" name="pressure" required>
    </div>
  </div>
  <button class="ui blue submit button">Submit Reading</button>
</form>