
<table class="ui celled unstackable blue table">
  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>WindSpeed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{moment date format="DD MMMM YYYY HH:mm:ss"}}
        </td>
        <td>
          {{code}}
        </td>
        <td>
          {{temperature}}
        </td>
        <td>
          {{windSpeed}}
        </td>
        <td>
          {{windDirection}}
        </td>
        <td>
          {{pressure}}
        </td>
        <td>
          <a href='/station/{{../station.id}}/deletereading/{{id}}' class='ui icon button'>
            <i class="icon red trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>