{{> menu id="account"}}

<div class="ui message">
  <div class="header">
    Account details
  </div>
  <div class="ui list">
    <div class="item">
      <i class="users icon"></i>
      <div class="content">
        <span class="ui blue text">Name:</span> {{user.firstName}} {{user.lastName}}
      </div>
    </div>
    <div class="item">
      <i class="mail icon"></i>
      <div class="content">
        <span class="ui blue text">Email:</span> <a href={{user.email}}> {{user.email}}</a>
      </div>
    </div>
    <div class="item">
      <i class="user secret icon"></i>
      <div class="content">
        <span class="ui blue text">Password:</span> {{user.password}}
      </div>
    </div>
  </div>
</div>
<div class="ui attached message">
  <div class="header">
    Update your details
  </div>
  <p>Help us ensure that your account details are accurate</p>
</div>
<form class="ui form attached fluid segment" action="update/{{user.id}}" method="POST">
  <h3 class="ui header">Update</h3>
  <div class="two required fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text" name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text" name="lastName">
    </div>
  </div>
  <div class="required field">
    <label>New Email</label>
    <input placeholder="Email" type="text" name="email">
  </div>
  <div class="required field">
    <label>New Password</label>
    <input type="password" name="password">
  </div>
  <button class="ui blue submit button">Submit</button>
</form>
<div class="ui bottom attached warning message">
  <i class="icon help"></i>
  Has your account been compromised? Please get in touch <a href="/about">here</a>.
</div>